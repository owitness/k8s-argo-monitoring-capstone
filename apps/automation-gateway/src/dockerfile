FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    opentelemetry-bootstrap -a install

# Copy application
COPY main.py .
COPY run.sh .
RUN chmod +x run.sh

EXPOSE 8000

# Run with OpenTelemetry auto-instrumentation
CMD ["./run.sh"]